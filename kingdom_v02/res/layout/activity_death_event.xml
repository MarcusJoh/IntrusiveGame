<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DeathEvent"
    android:background="@color/royal_red"
    style="@style/NoActionBar" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="Restart"
        android:text="Restart" />

    <TextView
        android:id="@+id/grave_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:text="@string/death_headline"
        android:textColor="@color/royal_blue"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/king"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="102dp"
        android:layout_marginLeft="35dp"
        android:text="Large Text"
        android:onClick ="page"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/fuckingbutton"
        android:onClick="Something"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/king"
        android:layout_alignParentRight="true"
        android:text="Klick to find out more about the king/queen" />

</RelativeLayout>
