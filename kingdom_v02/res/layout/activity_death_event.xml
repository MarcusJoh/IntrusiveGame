<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DeathEvent"
    android:background="@color/royal_red"
    style="@style/NoActionBar" >

    <TextView
        android:id="@+id/grave_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="@string/death_headline"
        android:textColor="@color/royal_blue"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/grave_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/image_grave"
        android:layout_alignTop="@+id/grave_headline"
        android:text="@string/death_text"
        android:textColor="@color/royal_blue"
        android:textSize="42sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="Restart"
        android:text="Restart" />

    <ImageView
        android:id="@+id/image_grave"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/grave_headline"
        android:src="@drawable/grave" />

</RelativeLayout>
