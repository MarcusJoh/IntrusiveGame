<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royal_blue"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Event" >

    <ImageView
        android:id="@+id/image_minister"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_char_agriculture" />

    <TextView
        android:id="@+id/text_minister_name_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_minister"
        android:layout_marginBottom="-5sp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/text_minister_first_name"
        android:textColor="@color/price_blue"
        android:textScaleX="0"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/text_minister_name_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_minister_name_1"
        android:layout_marginTop="-10sp"
        android:gravity="center"
        android:text="@string/text_minister_last_name"
        android:textColor="@color/royal_beige"
        android:textScaleX="1"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="250dp"
        android:layout_height="4dp"
        android:layout_below="@id/text_minister_name_2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@color/price_blue" />

    <TextView
        android:id="@+id/text_royal_member"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:gravity="center"
        android:layout_below="@id/line"
        android:text="Member of the royal court"
        android:textAllCaps="true"
        android:textColor="@color/royal_beige"
        android:textScaleX="0"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iconclock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_royal_member"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_clock" />

    <ImageView
        android:id="@+id/btn_phone_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="24dp"
        android:onClick="btnDecline"
        android:src="@drawable/ic_cancel" />

    <ImageView
        android:id="@+id/btn_phone_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp"
        android:onClick="phone_button"
        android:src="@drawable/ic_accept" />

</RelativeLayout>