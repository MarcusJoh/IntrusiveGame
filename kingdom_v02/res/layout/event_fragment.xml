<se.mah.kingdom_v02.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/royal_beige">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:background="@color/royal_blue"
                android:orientation="vertical" >
                
                <ImageView
		           android:id="@+id/image_minister"
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="30dp"
		           android:layout_centerHorizontal="true"
		           android:src="@drawable/ic_char_agriculture" />

                <TextView
                    android:id="@+id/text_minister_name_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="@string/text_minister_first_name"
                    android:textColor="@color/royal_beige"
                    android:textSize="22dp" />
                
                <TextView
                    android:id="@+id/text_minister_name_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_minister_last_name"
                    android:textColor="@color/royal_beige"
                    android:textSize="64dp" />

                
            </LinearLayout>
			<LinearLayout 
			    android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:background="@color/royal_teal" >
                
                <TextView
                    android:id="@+id/text_make_choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="@string/makeChoice"
                    android:textColor="@color/royal_teal"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/royal_teal" >
                
                <ImageView
		           android:id="@+id/ImageOption01"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption1"
		           android:src="@drawable/icon_latin_1" />

                <TextView
                    android:id="@+id/text_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/event_text"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />
                
             <Button
                    android:id="@+id/btn_option1_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="163dp"
                    android:layout_marginTop="390dp"
                    android:text="Accept" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/royal_teal" >
                <ImageView
		           android:id="@+id/ImageOption02"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption2"
		           android:src="@drawable/icon_latin_2" />

                <TextView
                    android:id="@+id/text_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/event_text"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />
                
                <Button
                    android:id="@+id/btn_option2_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="163dp"
                    android:layout_marginTop="390dp"
                    android:text="Accept" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/royal_teal" >
                
                <ImageView
		           android:id="@+id/ImageOption03"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption1"
		           android:src="@drawable/icon_latin_3" />

                <TextView
                    android:id="@+id/text_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/event_text"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />
                
                <Button
                    android:id="@+id/btn_option3_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="163dp"
                    android:layout_marginTop="390dp"
                    android:onClick="btnOption3"
                    android:src="@drawable/icon_latin_3"
                    android:text="Accept" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/royal_teal" >
                <ImageView
		           android:id="@+id/ImageOption04"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption3"
		           android:src="@drawable/icon_latin_4" />

                <TextView
                    android:id="@+id/text_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/event_text"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />
                
                <Button
                    android:id="@+id/btn_option4_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="163dp"
                    android:layout_marginTop="390dp"
                    android:text="Accept" />
            </LinearLayout>
        </LinearLayout>
		
        <TextView 
            android:id="@+id/eventText" 
            style="@style/Item.Sticky" 
            />

    </FrameLayout>

</se.mah.kingdom_v02.ObservableScrollView>
