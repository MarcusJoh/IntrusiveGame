<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/royal_cream"
    tools:context=".Coronation" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ic_story_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/im_map_band_end" />

        <ImageView
            android:id="@+id/ic_story_game_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:src="@drawable/im_banner_arbitera" />

        <ImageView
            android:id="@+id/ic_story_arrows"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/ic_story_map"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_arrow_redoran" />

        <ImageView
            android:id="@+id/ic_story_picture_one"
            android:layout_width="300dp"
            android:layout_height="330dp"
            android:layout_below="@id/ic_story_arrows"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:src="@drawable/intro_1_blu" />

        <TextView
            android:id="@+id/text_story_kingdom_of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_story_picture_one"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="-15sp"
            android:layout_marginTop="-25sp"
            android:text="@string/text_story_kingdom_of"
            android:textColor="@color/royal_red"
            android:textScaleX="0"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_story_arbitrea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_story_kingdom_of"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="-10sp"
            android:text="@string/text_story_arbitrea"
            android:textColor="@color/royal_red"
            android:textScaleX="1"
            android:textSize="52sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_intro_story_text_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_story_arbitrea"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="8sp"
            android:text="@string/text_intro_story_text_p1"
            android:textColor="@color/royal_red"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ic_story_picture_two"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/text_intro_story_text_p1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/intro_2_red" />

        <TextView
            android:id="@+id/text_intro_story_text_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_story_picture_two"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="8sp"
            android:text="@string/text_intro_story_text_p2"
            android:textColor="@color/royal_red"
            android:textSize="18sp" />
        
        <ImageView
            android:id="@+id/ic_icon_story_down"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:layout_below="@id/text_intro_story_text_p2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_stamp_red_gold" />

        <TextView
            android:id="@+id/text_story_you_will_be"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_icon_story_down"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="-15sp"
            android:text="@string/text_story_king_is_dead"
            android:textColor="@color/royal_red"
            android:textScaleX="1"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_story_forgotten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_story_you_will_be"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="-5sp"
            android:text="@string/text_story_long_live_the_king"
            android:textColor="@color/royal_red"
            android:textScaleX="0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/newgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/text_story_forgotten"
            android:layout_centerHorizontal="true"
            android:paddingBottom="24dp"
            android:paddingRight="5dp"
            android:layout_marginTop="24dp"
            android:onClick="newGame"
            android:src="@drawable/im_banner_start" />
    </RelativeLayout>

</ScrollView>