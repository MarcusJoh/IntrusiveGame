<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Coronation"  android:background="@color/royal_blue"
    style="@style/NoActionBar" >
    
    <TextView
        android:id="@+id/coronation_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/coronation_headline"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="@color/royal_teal" />
    
    <ImageView
	    android:id="@+id/image_coronation"
	    android:layout_width="fill_parent"
	    android:layout_height="300dp"
	    android:layout_marginTop="30dp"
	    android:layout_gravity="center"
	    android:layout_below="@id/coronation_headline"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/crown" />

    <TextView
        android:id="@+id/coronation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_coronation"
        android:layout_marginTop="24dp"
        android:text="@string/coronation_text"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="42sp"
        android:textColor="@color/royal_teal" />

</RelativeLayout>
