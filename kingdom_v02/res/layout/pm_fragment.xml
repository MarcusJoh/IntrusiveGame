<se.mah.kingdom_v02.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="360dp"
                android:layout_height="600dp" >

                <TextView
                    android:id="@+id/text_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/event_option"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />

                
            </RelativeLayout>

            <View
                android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sticky_height" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <ImageView
		           android:id="@+id/ImageOption01"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption1"
		           android:src="@drawable/icon_latin_1" />

                <TextView
                    android:id="@+id/text_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/event_text"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />
                
                <ImageView
		           android:id="@+id/btn_option1_confirm"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption1"
		           android:src="@drawable/icon_latin_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <ImageView
		           android:id="@+id/ImageOption02"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption2"
		           android:src="@drawable/icon_latin_2" />

                <TextView
                    android:id="@+id/text_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/event_text"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />
                
                <ImageView
		           android:id="@+id/btn_option2_confirm"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption1"
		           android:src="@drawable/icon_latin_2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                
                <ImageView
		           android:id="@+id/ImageOption03"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption1"
		           android:src="@drawable/icon_latin_3" />

                <TextView
                    android:id="@+id/text_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/event_text"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />
                
                <ImageView
		           android:id="@+id/btn_option3_confirm"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption3"
		           android:src="@drawable/icon_latin_3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <ImageView
		           android:id="@+id/ImageOption04"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption3"
		           android:src="@drawable/icon_latin_4" />

                <TextView
                    android:id="@+id/text_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/event_text"
                    android:textColor="@color/clr_event_text"
                    android:textSize="16dp" />
                
                <ImageView
		           android:id="@+id/btn_option4_confirm"
		           android:layout_width="24dp"
		           android:layout_height="24dp"
		           android:layout_alignParentTop="true"
		           android:layout_alignParentLeft="true"
		           android:layout_marginTop="390dp"
		           android:layout_marginLeft="163dp"
		           android:layout_centerHorizontal="true"
		           android:onClick="btnOption4"
		           android:src="@drawable/icon_latin_4" />
            </LinearLayout>
        </LinearLayout>

        <TextView android:id="@+id/sticky" style="@style/Item.Sticky" />

    </FrameLayout>

</se.mah.kingdom_v02.ObservableScrollView>
